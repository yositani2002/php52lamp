{
  "name": "webserver",
  "default_attributes": {
      "authorization": {
        "sudo": {
          "users": ["vagrant"],
          "passwordless": true,
          "agent_forwarding": true,
          "sudoers_defaults": [
            "env_reset",
            "!visiblepw",
            "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
          ]
        }
      }
    },
  "override_attributes": {
    "apache": {
      "listen_ports": ["80", "443"],
      "default_site_enabled": true
    }
  },
  "json_class": "Chef::Role",
  "description": "Webserver",
  "chef_type": "role",
  "run_list": [
    "recipe[sudo]",
    "recipe[apache2]",
    "recipe[git]",
    "recipe[web_app::default]",
    "recipe[web_app::php]"
  ]
}
